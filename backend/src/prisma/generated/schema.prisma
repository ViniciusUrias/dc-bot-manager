generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  output          = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// TODO: Create your schema here

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  sessions  Session[]
  bots      Bot[]
  servers   Server[]

  @@map("users")
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Server {
  id        String   @id @default(uuid())
  name      String   @unique
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Bot       Bot[]
}

model Bot {
  id             String      @id @default(uuid())
  name           String
  token          String
  ownerId        String
  owner          User        @relation(fields: [ownerId], references: [id])
  prefix         String      @default("!")
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  serverId       String
  server         Server      @relation(fields: [serverId], references: [id])
  commands       Command[]
  events         Event[]
  configurations BotConfig[]
  analytics      Analytics[]
}

model Command {
  id          String              @id @default(uuid())
  name        String
  description String
  response    String
  enabled     Boolean             @default(true)
  botId       String
  bot         Bot                 @relation(fields: [botId], references: [id])
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  permissions CommandPermission[]
  usage       CommandUsage[]
}

model CommandPermission {
  id        String   @id @default(uuid())
  commandId String
  command   Command  @relation(fields: [commandId], references: [id])
  roleId    String
  allow     Boolean  @default(true)
  createdAt DateTime @default(now())
}

model Event {
  id        String   @id @default(uuid())
  name      String // e.g., "messageCreate", "guildMemberAdd"
  action    String // JavaScript code to execute
  enabled   Boolean  @default(true)
  botId     String
  bot       Bot      @relation(fields: [botId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BotConfig {
  id        String   @id @default(uuid())
  key       String
  value     String
  botId     String
  bot       Bot      @relation(fields: [botId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CommandUsage {
  id        String   @id @default(uuid())
  commandId String
  command   Command  @relation(fields: [commandId], references: [id])
  userId    String // Discord user ID
  guildId   String // Discord guild ID
  channelId String // Discord channel ID
  timestamp DateTime @default(now())
}

model Analytics {
  id        String   @id @default(uuid())
  botId     String
  bot       Bot      @relation(fields: [botId], references: [id])
  eventType String // e.g., "command_executed", "user_joined"
  data      Json // Additional event data
  timestamp DateTime @default(now())
}
